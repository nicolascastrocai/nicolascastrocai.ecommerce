{{#if listado.length }}
    {{#each listado}}
    <a href="https://sony.com" class="card" >
        <article class="card__article">
            <div class="card__image" style="background-image: url('{{foto}}')">
            </div>
            <div class="card__content">
                <h2 class="card__heading">{{nombre}}</h2>
                <h3 class="card__heading precio">${{precio}}</h3>
                <h5 class="card__heading precio">Hasta 12 cuotas sin interes</h5>
                <div class="card__description">
                    <p>{{detalles}}</p>
                </div>
                
                <h4 class="card__btn-compra" onclick="agregarCarrito(event,'{{_id}}',this)">ðŸ›’comprar</h4>
            </div>
        </article>
    </a>
    {{/each}}
{{else}}
    <h2>No se encontraron productos</h2>
{{/if}}